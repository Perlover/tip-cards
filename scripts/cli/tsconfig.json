{
  "compilerOptions": {
    "paths": {
      "@backend/*": ["../../backend/src/*"],
      "@shared/*": ["../../shared/src/*"]
    },
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
