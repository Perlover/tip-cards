{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../src/*"],
      "@backend/*": ["../backend/src/*"]
    },
    "lib": ["ESNext", "dom"],
    "types": ["jest", "node"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
